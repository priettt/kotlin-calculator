<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="Button.Calculator.Number" parent="Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_calculator_number_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/material_blue_gray_200</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/match_constraint</item>

    </style>

    <style name="Button.Calculator.Operation" parent="Button.Calculator.Number">
        <item name="android:textSize">@dimen/text_calculator_operator_button</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
