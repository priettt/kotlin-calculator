<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text_calculator_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" @color/color_title_text"
            android:textSize="@dimen/text_calculator_title_40"
            android:fontFamily="sans-serif-light"
            android:text="@string/calculator_title"
            android:layout_marginTop="@dimen/margin_all_normal_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/text_calculator_visor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculator_visor_default"
            android:gravity="end"
            android:paddingStart="@dimen/margin_all_xsmall_8"
            android:paddingEnd="@dimen/margin_all_xsmall_8"
            android:layout_marginTop="@dimen/margin_all_normal_24"
            android:textColor=" @color/color_title_text"
            android:textSize="@dimen/text_calculator_visor_50"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@+id/text_calculator_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>